<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PAGO"
            android:textColor="#E91E63"
            android:textSize="34sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="42dp"
            tools:layout_editor_absoluteY="44dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Numero De Tarjeta"
            android:textColor="#E91E63"
            tools:layout_editor_absoluteX="46dp"
            tools:layout_editor_absoluteY="111dp" />

        <EditText
            android:id="@+id/TXTNUMERODTARJETA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="NUMERO DE TARJETA"
            android:inputType="number"
            tools:layout_editor_absoluteX="36dp"
            tools:layout_editor_absoluteY="155dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha de Caducidad"
            android:textColor="#E91E63"
            tools:layout_editor_absoluteX="46dp"
            tools:layout_editor_absoluteY="232dp" />

        <EditText
            android:id="@+id/TXTFECHACAD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="FECHA CADUCIDAD"
            android:inputType="number"
            tools:layout_editor_absoluteX="39dp"
            tools:layout_editor_absoluteY="273dp" />

        <RadioButton
            android:id="@+id/RADIOBUTONDEBITO"
            android:layout_width="88dp"
            android:layout_height="44dp"
            android:text="DEBITO"
            tools:layout_editor_absoluteX="270dp"
            tools:layout_editor_absoluteY="248dp" />

        <RadioButton
            android:id="@+id/RADIOBUTONCREDITO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CREDITO"
            tools:layout_editor_absoluteX="272dp"
            tools:layout_editor_absoluteY="299dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Codigo de Seguridad"
            android:textColor="#E91E63"
            tools:layout_editor_absoluteX="55dp"
            tools:layout_editor_absoluteY="372dp" />

        <EditText
            android:id="@+id/TXTCODIGODESEGU"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="CODIGO SEGURIDAD"
            android:inputType="number"
            tools:layout_editor_absoluteX="42dp"
            tools:layout_editor_absoluteY="414dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Importe a Pagar"
            android:textColor="#E91E63"
            tools:layout_editor_absoluteX="47dp"
            tools:layout_editor_absoluteY="487dp" />

        <EditText
            android:id="@+id/TXTIMPORTEAPAGAR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="IMPORTE A PAGAR"
            android:inputType="number"
            tools:layout_editor_absoluteX="43dp"
            tools:layout_editor_absoluteY="532dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NOMBRE Y APELLIDO"
            android:textColor="#E91E63" />

        <EditText
            android:id="@+id/TXTNOMBRE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/BTNCONTINUE"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:text="PAGAR"
            app:backgroundTint="#E91E63"
            tools:layout_editor_absoluteX="149dp"
            tools:layout_editor_absoluteY="628dp" />

        <Button
            android:id="@+id/btnfinalizar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FINALIZAR" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
